#include<bits/stdc++.h>
using namespace std;
int main(){
    int jod;
    cin>>jod;
    while(jod--){
        int n;
        cin>>n;
        int arr[n];
        int maxi=INT_MIN;
        int mini=INT_MAX;
        for(int i=0;i<n;i++){
            cin>>arr[i];
            maxi=max(maxi,arr[i]);
            mini=min(mini,arr[i]);
        }
    int dif=0;
    dif=maxi-mini;
    cout<<dif<<endl;
    }
}
